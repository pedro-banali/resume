{
  "include": [ "src/**/*" ],
  "exclude": [ "src/**/*.spec.*" ],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",

    "module": "es6",
    "moduleResolution": "node",
    "target": "es6",
    "esModuleInterop": true,
    "sourceMap": true,

    "allowJs": false,
    "alwaysStrict": true,
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": false,
    "strictNullChecks": true,
  }
}
